{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "rootDir": "./src",
        "lib": [
            "ES2020",
            "DOM"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/**/*.spec.ts",
    ]
}
