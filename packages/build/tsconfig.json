{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "rootDir": "./src"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/**/*.spec.ts",
    ],
    "extends": "../tsconfig.json"
}
